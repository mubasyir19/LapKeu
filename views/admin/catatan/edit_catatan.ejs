<%- include ("../../partials/header.ejs") %>
<%- include ("../../partials/navbar.ejs") %>
<%- include ("../../partials/sidebar.ejs") %>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Ubah Catatan</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item"><a href="/catatan">Catatan</a></li>
              <li class="breadcrumb-item active">Ubah Catatan</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title">Form Ubah Catatan</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form action="/catatan/ubah/<%= catatan.id %>?_method=PUT" method="post">
                  <div class="card-body">
                    <div class="form-group">
                      <label for="description">Masukkan Keterangan</label>
                      <input type="text" name="description" class="form-control" id="description" value="<%= catatan.description %>" placeholder="Masukkan keterangan" required>
                    </div>
                    <div class="form-group">
                      <label for="amount">Masukkan Jumlah</label>
                      <input type="number" name="amount" class="form-control" id="amount" value="<%= catatan.amount %>" placeholder="Masukkan jumlah" required>
                    </div>
                    <div class="form-group">
                      <label for="date">Pilih Tanggal</label>
                      <input type="date" name="date" class="form-control" id="date" placeholder="Pilih tanggal" required>
                    </div>
                  </div>
                  <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Simpan</button>
                  </div>
                </form>
              </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
        var catatanDate = '<%= catatan.date %>'; // Mendapatkan nilai tanggal dari server-side

        if (catatanDate) { // Pastikan bahwa nilai tanggal tidak kosong
            var dateObj = new Date(catatanDate); // Buat objek tanggal dari nilai tanggal

            // Ambil tahun, bulan, dan tanggal dari objek tanggal
            var year = dateObj.getFullYear();
            var month = String(dateObj.getMonth() + 1).padStart(2, '0');
            var day = String(dateObj.getDate()).padStart(2, '0');

            // Bentuk string dengan format 'YYYY-MM-DD'
            var formattedDate = year + '-' + month + '-' + day;

            // Set nilai formattedDate sebagai nilai dari input tanggal
            document.getElementById('date').value = formattedDate;
        }
    });
</script>


