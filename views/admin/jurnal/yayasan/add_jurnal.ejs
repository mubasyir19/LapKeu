<%- include ("../../../partials/header.ejs") %>
<%- include ("../../../partials/navbar.ejs") %>
<%- include ("../../../partials/sidebar.ejs") %>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Tambah Jurnal <%= yayasan.fullname %></h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item"><a href="/jurnal">Jurnal</a></li>
              <li class="breadcrumb-item"><a href="/jurnal/<%= encodeURIComponent(yayasan.fullname.replace(/\s+/g, '-')) %>"><%= yayasan.fullname %></a></li>
              <li class="breadcrumb-item active">Tambah Jurnal</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card card-primary">
                <div class="card-header">
                  <h3 class="card-title">Tambah Jurnal <%= yayasan.fullname %></h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form action="/catatan/tambah" method="post">
                  <div class="card-body">
                    <div class="form-group">
                        <label for="date">Pilih Tanggal</label>
                        <input type="date" name="date" class="form-control" id="date" placeholder="Pilih tanggal" required>
                      </div>
                    <div class="form-group">
                      <label for="description">Masukkan Keterangan</label>
                      <input type="text" name="description" class="form-control" id="description" placeholder="Masukkan keterangan" required>
                    </div>
                    <div class="form-group">
                        <label>Pilih Kode Chart of Account</label>
                         <select class="form-control select2" style="width: 100%;" name="id_kategori" required>
                            <option selected="selected">Pilih Kode</option>
                            <% code.forEach(item => { %>
                                <option value="<%= item.id %>"><%= item.name %></option>
                            <% }) %>
                        </select>
                    </div>
                    <div class="form-group">
                      <label for="amount">Masukkan Jumlah Debit</label>
                      <input type="text" name="amount" class="form-control" id="amount" placeholder="Masukkan jumlah" required>
                    </div>
                    <div class="form-group">
                        <label>Pilih Tipe</label>
                         <select class="form-control select2" style="width: 100%;" name="transactionType" id="transactionType">
                            <option selected="selected">Pilih Tipe</option>
                            <option value="Debit">Debit</option>
                            <option value="Kredit">Kredit</option>
                        </select>
                    </div>
                    <div class="form-group" id="kreditField" style="display: none;">
                        <label for="kredit">Masukkan Jumlah Kredit</label>
                        <input type="number" name="kredit" class="form-control" id="Kredit" placeholder="Masukkan jumlah kredit">
                    </div>
                  </div>
                  <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Simpan</button>
                  </div>
                </form>
              </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>

<%- include ("../../../partials/footer.ejs") %>
<%- include ("../../../partials/js.ejs") %>